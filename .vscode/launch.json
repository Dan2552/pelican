    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'pelican'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=pelican"
                ],
                "filter": {
                    "name": "pelican",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "LIBRARY_PATH": "/opt/homebrew/lib"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example 'demo'",
            "cargo": {
                "args": [
                    "build",
                    "--example=demo",
                    "--package=pelican"
                ],
                "filter": {
                    "name": "demo",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "LIBRARY_PATH": "/opt/homebrew/lib"
            }
        },
